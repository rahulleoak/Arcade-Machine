                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="minus" Content="-" HorizontalAlignment="Left" Margin="463,149,0,0" VerticalAlignment="Top" Width="81" Height="44" RenderTransformOrigin="0.543,0.205" FontSize="28" Background="White" Click="minus_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
