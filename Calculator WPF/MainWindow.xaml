            </Button.Effect>
        </Button>
        <Button x:Name="divide" Content="/" HorizontalAlignment="Left" Margin="463,213,0,0" VerticalAlignment="Top" Width="81" Height="44" RenderTransformOrigin="0.543,0.205" FontSize="28" Background="White" Click="divide_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="mult" Content="*" HorizontalAlignment="Left" Margin="350,213,0,0" VerticalAlignment="Top" Width="81" Height="44" RenderTransformOrigin="0.543,0.205" FontSize="28" Background="White" Click="mult_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="result" Content="=" HorizontalAlignment="Left" Margin="350,277,0,0" VerticalAlignment="Top" Width="194" Height="44" RenderTransformOrigin="0.543,0.205" FontSize="28" TextOptions.TextHintingMode="Animated" Background="White" Click="result_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Image Name ="calc1" Source ="wheel.png" HorizontalAlignment="Left" Height="70" Margin="472,10,0,0" VerticalAlignment="Top" Width="72" RenderTransformOrigin="1.278,0.514"/>
        <Button HorizontalAlignment="Left" Margin="350,10,0,0" VerticalAlignment="Top" Width="81" Click="Button_Click_1" Height="58" Background="White">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>

            <Image Source="back2.png" Height="56" Width="80" ></Image>

        </Button>
    </Grid>
</Window>
